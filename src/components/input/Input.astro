---
const { class: className, ...props } = Astro.props;

const baseClasses =
  "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200";

const inputClasses = className || baseClasses;
---

<input class={inputClasses} {...props} />
